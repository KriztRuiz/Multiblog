{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom",
      "vite/client",
      "astro/client"
    ]
  },
  "include": [
    ".astro/types.d.ts",
    "src",
    "vitest.setup.ts",
    "astro.config.mjs",
    "vite.config.ts",
    "e2e/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
